<mvc:View height="100%"
	controllerName="pnp.co.za.FranchisePortalOrdering.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt">

	<tnt:ToolPage
		id="app"
		class="sapUiDemoToolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button
					id="sideNavigationToggleButton"
					icon="sap-icon://menu2"
					type="Transparent"
					press="onSideNavButtonPress">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer/>
				<Title text="{i18n>appTitle}"/>
				<ToolbarSpacer/>
				<Button
					id="errorButton"
					icon="sap-icon://message-popup"
					text="{= ${alerts>/alerts/errors}.length }"
					visible="{= ${alerts>/alerts/errors}.length === 0 ? false : true }"
					type="Transparent"
					press="onMessagePopoverPress">
					<layoutData>
						<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
					</layoutData>
				</Button>
				<Button
					id="notificationButton"
					icon="sap-icon://ui-notifications"
					text="{= ${alerts>/alerts/notifications}.length }"
					visible="{= ${alerts>/alerts/notifications}.length === 0 ? false : true }"
					type="Transparent"
					press="onNotificationPress">
					<layoutData>
						<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
					</layoutData>
				</Button>
				<Button
					id="userButton"
					text="{= 'Logged on as ' + ${viewModel>/loggedOnUser} }"
					type="Transparent"
					press="onUserNamePress">
					<layoutData>
						<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
					</layoutData>
				</Button>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation
				expanded="true"
				itemSelect="onNavigationItemSelect">
				<tnt:NavigationList
					items="{path: 'sideNavigation>/navigation', templateShareable: false}">
					<tnt:NavigationListItem
						text="{sideNavigation>title}"
						icon="{sideNavigation>icon}"
						expanded="{sideNavigation>/expanded}"
						items="{path: 'sideNavigation>items', templateShareable: false}"
						key="{sideNavigation>key}">
						<tnt:NavigationListItem
							text="{sideNavigation>title}"
							key="{sideNavigation>key}"
							enabled="{sideNavigation>enabled}">
						</tnt:NavigationListItem>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList
						items="{path: 'sideNavigation>/fixedNavigation', templateShareable: false}">
						<tnt:NavigationListItem
							text="{sideNavigation>title}"
							icon="{sideNavigation>icon}"
							key="{sideNavigation>key}">
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<App id="mainContents"/>
		</tnt:mainContents>
	</tnt:ToolPage>

</mvc:View>