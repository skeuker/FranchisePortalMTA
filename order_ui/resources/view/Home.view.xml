<mvc:View controllerName="pnp.co.za.FranchisePortalOrdering.controller.Home" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" busy="{viewModel>/busy}">
	<Page showHeader="false">
		<l:BlockLayout id="BlockLayout" background="Light">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiNoContentPadding">
					<Image src="/images/homeImage.jpg" width="100%"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiResponsiveContentPadding" title="{i18n>blockAppTitle}" backgroundColorSet="ColorSet9"
					backgroundColorShade="ShadeA" titleAlignment="Left"/>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell backgroundColorSet="ColorSet5" backgroundColorShade="ShadeA">
					<l:VerticalLayout>
						<core:Icon src="sap-icon://sales-order" size="2.5rem" color="Default"/>
						<Title text="{i18n>blockEventsTitle}" titleStyle="H2" class="sapUiTinyMarginTopBottom"/>
						<Text text="{i18n>blockEventsText}" class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>blockEventsAccessLink}" press="onPressEventsLink"/>
						<Link text="{i18n>blockEventsLearnLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell backgroundColorSet="ColorSet9" backgroundColorShade="ShadeA">
					<l:VerticalLayout>
						<core:Icon src="sap-icon://list" size="2.5rem" color="Default"/>
						<Title text="{i18n>blockOrdersTitle}" titleStyle="H2" class="sapUiTinyMarginTopBottom"/>
						<Text text="{i18n>blockOrdersText}" class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>blockOrdersAccessLink}"/>
						<Link text="{i18n>blockOrdersLearnLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>