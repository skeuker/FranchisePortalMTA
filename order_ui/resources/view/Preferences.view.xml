<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:sap.ui.layout="sap.ui.layout" xmlns:sap.ui.layout.form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml" busy="{viewModel>/busy}" busyIndicatorDelay="{viewModel>/delay}"
	controllerName="pnp.co.za.FranchisePortalOrdering.controller.Preferences">
	<sap.ui.layout.form:Form id="formPreferences" class="sapUiMediumMarginBottom" width="60%">
		<sap.ui.layout.form:layout>
			<sap.ui.layout.form:ResponsiveGridLayout/>
		</sap.ui.layout.form:layout>
		<sap.ui.layout.form:formContainers>
			<sap.ui.layout.form:FormContainer title="My role attributes" expandable="true">
				<sap.ui.layout.form:formElements>
					<sap.ui.layout.form:FormElement>
						<sap.ui.layout.form:label>
							<Label required="true" text="{i18n>labelStoreID}" width="100%"/>
						</sap.ui.layout.form:label>
						<sap.ui.layout.form:fields>
							<Input id="inputRoleAttributeStoreID" width="50%" maxLength="20" enabled="false"/>
						</sap.ui.layout.form:fields>
					</sap.ui.layout.form:FormElement>
				</sap.ui.layout.form:formElements>
			</sap.ui.layout.form:FormContainer>
		</sap.ui.layout.form:formContainers>
	</sap.ui.layout.form:Form>
</mvc:View>